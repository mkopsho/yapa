<h1>Sign up</h1>
<%= render partial: "layouts/errors", locals: {object: @user} %>

<%= form_with(model: @user) do |form| %>
  <%= form.label :username %>
  <%= form.text_field :username %><br>

  <%= form.label :email %>
  <%= form.email_field :email %><br>

  <%= form.label :password %>
  <%= form.password_field :password %><br>
  
  <%= form.submit "Sign up" %>
<% end %>